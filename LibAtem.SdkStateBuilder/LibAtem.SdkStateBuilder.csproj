<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Platforms>v8.1;v8.1.1</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='v8.1.1'">
    <DefineConstants>ATEM_v8_1_1</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Platform)'=='v8.1'">
    <DefineConstants>ATEM_v8_1</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\LibAtem\LibAtem.State\LibAtem.State.csproj" />
  </ItemGroup>

  <Choose>
    <When Condition=" '$(Platform)'=='v8.1' ">
      <ItemGroup>
        <Reference Include="Interop.BMDSwitcherAPI">
          <HintPath>..\AtemSDK\v8.1\Interop.BMDSwitcherAPI.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <When Condition=" '$(Platform)'=='v8.1.1' ">
      <ItemGroup>
        <Reference Include="Interop.BMDSwitcherAPI">
          <HintPath>..\AtemSDK\v8.1.1\Interop.BMDSwitcherAPI.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <COMReference Include="BMDSwitcherAPI">
          <Guid>{8A92B919-156C-4D61-94EF-03F9BE4004B0}</Guid>
          <VersionMajor>1</VersionMajor>
          <VersionMinor>0</VersionMinor>
          <Lcid>0</Lcid>
          <WrapperTool>tlbimp</WrapperTool>
          <Isolated>False</Isolated>
        </COMReference>
      </ItemGroup>
    </Otherwise>
  </Choose>

</Project>
